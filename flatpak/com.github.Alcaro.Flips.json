{
    "app-id" : "com.github.Alcaro.Flips",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.38",
    "sdk" : "org.gnome.Sdk",
    "command" : "flips",
    "finish-args" : [
        /* X11 + XShm access */
        "--share=ipc",
        "--socket=x11",
        /* Wayland access */
        "--socket=wayland",
        /* OpenGL + DRI access */
        "--device=dri",
        /* Needed to save patched ROMs */
        "--filesystem=home",
        /* Needed to find the ROMs and patches */
        "--filesystem=host:ro"
    ],
    "modules" : [
        {
            "name" : "flips",
            "buildsystem" : "simple",
            "build-commands": [
                "sh make.sh",
                "make install PREFIX=/app"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/Alcaro/Flips.git"
                }
            ]
        }
    ]
}
